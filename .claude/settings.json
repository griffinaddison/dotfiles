{
  "permissions": {
    "allow": [
      "Edit",
      "Write",
      "Read",
      "WebSearch",
      "WebFetch",
      "Bash",
      "Bash(/home/griffin/.claude/statusline.sh)"
    ],
    "additionalDirectories": [
      "/opt/ros",
      "/usr/include",
      "/usr/local/include",
      "/usr/share"
    ],
    "deny": [
      "Bash(rm -rf /:*)",
      "Bash(rm -rf /*:*)",
      "Bash(rm -rf --no-preserve-root:*)",
      "Bash(rm -fr /:*)",
      "Bash(rm -fr /*:*)",
      "Bash(sudo rm -rf /:*)",
      "Bash(sudo rm -rf /*:*)",
      "Bash(mkfs:*)",
      "Bash(mkfs.ext4:*)",
      "Bash(mkfs.ext3:*)",
      "Bash(mkfs.xfs:*)",
      "Bash(mkfs.btrfs:*)",
      "Bash(dd if=* of=/dev/sda:*)",
      "Bash(dd if=* of=/dev/nvme:*)",
      "Bash(dd if=* of=/dev/vda:*)",
      "Bash(dd if=/dev/zero of=:*)",
      "Bash(dd if=/dev/random of=:*)",
      "Bash(dd if=/dev/urandom of=:*)",
      "Bash(> /dev/sda:*)",
      "Bash(> /dev/nvme:*)",
      "Bash(cat > /dev/sda:*)",
      "Bash(cat /dev/zero > :*)",
      "Bash(chmod -R 777 /:*)",
      "Bash(chmod 777 /:*)",
      "Bash(chown -R * /:*)",
      "Bash(mv / :*)",
      "Bash(mv /* :*)",
      "Bash(mv ~ /dev/null:*)",
      "Bash(mv * /dev/null:*)",
      "Bash(shred /dev/sda:*)",
      "Bash(shred /dev/nvme:*)",
      "Bash(wipefs:*)",
      "Bash(echo 1 > /proc/sys/kernel/panic:*)",
      "Bash(cat /dev/port:*)",
      "Bash(cat /dev/zero > /dev/mem:*)",
      "Bash(dd if=/dev/random of=/dev/port:*)",
      "Bash(wget * | sh:*)",
      "Bash(wget * | bash:*)",
      "Bash(curl * | sh:*)",
      "Bash(curl * | bash:*)",
      "Bash(curl -s * | sh:*)",
      "Bash(curl -s * | bash:*)"
    ],
    "defaultMode": "plan"
  },
  "enabledPlugins": {
    "pyright-lsp@claude-plugins-official": true
  },
  "hooks": {
    "SessionStart": [
      {
        "matcher": "",
        "hooks": [
          {
            "type": "command",
            "command": "~/.claude/hooks/cc-tmux-init.sh"
          }
        ]
      }
    ],
    "Stop": [
      {
        "matcher": "",
        "hooks": [
          {
            "type": "command",
            "command": "dir=$(basename \"$PWD\") && if [[ \"$OSTYPE\" == darwin* ]]; then osascript -e \"display notification \\\"Task complete\\\" with title \\\"claude@$dir\\\"\"; else notify-send \"claude@$dir\" \"Task complete\"; fi && printf '\\a'"
          },
          {
            "type": "command",
            "command": "~/.claude/hooks/cc-tmux-update.sh"
          }
        ]
      }
    ]
  },
  "statusLine": {
    "type": "command",
    "command": "/home/griffin/.claude/statusline.sh"
  }
}
